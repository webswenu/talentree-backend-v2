# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=talentree_user
DB_PASSWORD=talentree_password
DB_DATABASE=talentree_db
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_DROP_SCHEMA=false

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TTL_MS=300000
CACHE_MAX=1000

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_USER=
MAIL_PASSWORD=
EMAIL_FROM_ADDRESS=no-reply@talentree.com

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# AWS S3 CONFIGURATION
# ============================================
# Opcional para desarrollo local
# Si no se configuran, los archivos se guardar√°n localmente en ./uploads
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=talentree-bucket
